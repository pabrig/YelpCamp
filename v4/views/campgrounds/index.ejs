<% include ../partials/header.ejs %>

<p><a href="/campgrounds/new" class= "btn btn-primary btn-lg">Add New Campgrounds</a></p>

     <div class = "row text-center" style= "display:flex; flex-wrap:wrap;">
      <div class= "col-lg-12">
       <h3>Our Most Popular Campgrounds!</h3>
      </div>
    </div>

 <div clas="row" >
<% campgrounds.forEach (function(campgrounds){%>
   
   <div class ="col-md-3 col-sm-6 ">
     <div class ="thumbnail">
         <img src = "<%= campgrounds.image%>">  
        <div class="caption"> 
         <h4> <%= campgrounds.name%> </h4>
        </div>  
        <p>
          <a href='/campgrounds/<%= campgrounds._id%>' class = 'btn btn-primary'>More Info</a>
        </p>
     </div>
  
     </div>
      <% }); %>
 </div>
 

 <% include ../partials/footer.ejs %>

 </div>